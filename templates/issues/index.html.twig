{% extends 'base.html.twig' %}

{% block title %}Issues index{% endblock %}

{% block body %}
    <h1>Issues index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_issue</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for issue in issues %}
            <tr>
                <td>{{ issue.id }}</td>
                <td>{{ issue.nomIssue }}</td>
                <td>{{ issue.description }}</td>
                <td>
                    <a href="{{ path('issues_show', {'id': issue.id}) }}">show</a>
                    <a href="{{ path('issues_edit', {'id': issue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('issues_new') }}">Create new</a>
{% endblock %}
